<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spsit.lanick.andrlab_chat.MainActivity">

    <TextView
        android:text='@string/textWelcome'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWelcome"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text='@string/textAccount'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAccount"
        android:textAlignment="textStart"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textViewWelcome"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/action_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/buttonSignIn"
        android:textAlignment="center"
        android:layout_below="@+id/textViewAccount"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickSignIn" />

    <Button
        android:text="@string/action_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/buttonRegistration"
        android:textAlignment="center"
        android:layout_below="@+id/buttonSignIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickRegistration" />

    <Button
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRegistration"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/buttonSettings"
        android:layout_alignParentEnd="true"
        android:onClick="onClickSettings" />

</RelativeLayout>